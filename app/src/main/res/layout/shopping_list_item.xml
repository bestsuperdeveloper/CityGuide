<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@drawable/shopping_list_item"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="20dp"

        android:layout_height="wrap_content">

    </LinearLayout>
    <TextView
        android:text="TextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"

        android:id="@+id/textView9"

        android:textColor="@color/white"
        android:layout_gravity="center_vertical"
        android:layout_weight="1.6" />

    <TextView
        android:text="5634.34km"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:textColor="@color/highlight_color"
        android:textSize="@dimen/item_small_text_size"
        android:layout_gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="left|center_vertical"
        android:layout_marginLeft="8dp" />

    <ImageButton
        app:srcCompat="@drawable/right_arrow"
        android:id="@+id/imageButton5"
        android:scaleType="centerInside"
        android:layout_gravity="center_vertical|right"
        android:layout_marginRight="20dp"
        android:background="@drawable/click_background_layout"

        android:layout_width="30dp"
        android:layout_height="20dp"
        android:padding="2dp"
        android:layout_marginLeft="20dp" />

</LinearLayout>
