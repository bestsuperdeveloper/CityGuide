<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/layout_color"
    tools:context="krt.com.cityguide.Fragments.EventsSubFragments.ShoppingPlaceFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/layout_color"
        android:layout_height="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@color/white"
            android:id="@+id/textView17"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp" />

        <TextView
            android:text="BACK   "
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:padding="3dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@color/white"
            android:id="@+id/textView19"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        app:srcCompat="@drawable/sample_shop"
        android:id="@+id/imageView2"
        android:scaleType="centerCrop"
        android:layout_height="120dp" />

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/viewPager" />

    <me.relex.circleindicator.CircleIndicator
        android:id="@+id/indicator"
        android:background="@color/layout_color"
        android:layout_width="match_parent"
        app:ci_drawable="@drawable/selected_indicator"
        app:ci_drawable_unselected="@drawable/unselected_indicator"
        android:layout_alignParentBottom="true"
        android:layout_height="20dp" />
</LinearLayout>
